<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>52.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Community Punch Passes 2</masterLabel>
    <targets>
        <target>lightningCommunity__Default</target>
        <target>lightningCommunity__Page</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property 
                name="cardIcon" 
                type="String"
                label="SLDS Icon Name" 
                default="custom:custom95"
                description="Use icon names in the SLDS library"
                required="true"
            />
            <property 
                name="membershipCategoryNames" 
                type="String" 
                label="Membership Categories to Display"
                default="Private Lessons"
                description="Enter Membership Category Names to display, separated by commas"
                required="true"
            />
            <property 
                name="packageReferenceNameSingular" 
                type="String" 
                label="Package Reference Name (Singular)"
                default="Punch Pass"
                required="true"
            />
            <property 
                name="packageReferenceNamePlural" 
                type="String" 
                label="Package Reference Name (Plural)"
                default="Punch Passes"
                required="true"
            />
            <property 
                name="showNavigationButton" 
                type="Boolean" 
                label="Show Navigation Button"
                description="Enables a navigation button in the Lightning Card actions"
            />
            <property 
                name="navigationButtonLabel" 
                type="String" 
                label="Navigation Button Label" 
                default="Purchase Packages" 
            />
            <property 
                name="navigationButtonIcon" 
                type="String"
                label="Navigation Button SLDS Icon Name" 
                default="utility:event_ext"
                description="Use icon names in the SLDS library"
                required="true"
            />
            <property 
                name="navigationButtonUrl" 
                type="String" 
                label="Navigation Button URL" 
                placeholder="/s/membership" 
            />
            <property 
                name="openNavigationUrlInNewTab" 
                type="Boolean" 
                label="Open Navigation URL in new tab"
            />
            <property 
                name="enableAppointmentScheduling" 
                type="Boolean" 
                label="Allow appointment scheduling" 
                description="Enables the Schedule Appointment action for active punch passes with remaining credits"
            />
            <property 
                name="cancellationHoursNotice" 
                type="Integer" 
                label="Required Hours Notice for Cancellation" 
                default="0"
                required="true"
            />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>